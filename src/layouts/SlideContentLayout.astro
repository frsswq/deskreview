---
interface Props {
  id: string;
  title: string;
  spaceY: string;
}

const { id, title, spaceY } = Astro.props;
---

<div
  class="hidden animate-slidein overflow-y-auto overscroll-contain px-10 pb-10 pt-[52px]
    font-AreaInktrap text-desk-white opacity-0 [--delay:500ms]"
  id={id}
>
  <p class="text-2xl md:text-5xl font-bold leading-none tracking-tight">
    {title}
  </p>
  <div class={`text-base md:text-lg ${spaceY} pr-6 pt-10 md:pr-20 md:pt-8`}>
    <slot />
  </div>
</div>
