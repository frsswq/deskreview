---
import AboutCard from "../components/AboutCard.astro";
import AboutCardModal from "../components/AboutCardModal.astro";
import Slider from "../components/Slider.astro";

import { aboutCardData } from "../data/aboutCardData";
---

<div
  class="about-card mx-4 mt-4 grid animate-slidein grid-cols-1 place-items-center gap-4
    opacity-0 [--delay:500ms] md:mx-8 md:mt-0 md:grid-cols-2 md:gap-6"
>
  {
    aboutCardData.map((card) =>
      card.isModal ? <AboutCardModal {...card} /> : <AboutCard {...card} />
    )
  }
</div>

<Slider />