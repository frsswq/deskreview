---
import Card from "../components/Card.astro";
import { cardData } from "../data/cardData";

// Split the data for different grid layouts
const topCards = cardData.slice(0, 2);
const bottomCards = cardData.slice(2);
---

<div class="w-full flex flex-col">
  <div
    class="grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-8 px-4 pt-4 pb-8 w-full"
  >
    {topCards.map((card) => <Card {...card} />)}
  </div>
  <div
    class="grid grid-cols-1 md:grid-cols-3 gap-x-4 gap-y-8 px-4 md:py-8 pb-8 w-full"
  >
    {bottomCards.map((card) => <Card {...card} />)}
  </div>
</div>
