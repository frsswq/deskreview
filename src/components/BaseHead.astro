<style is:inline>
  /* Import fonts */
  @font-face {
    font-family: "AreaInktrap";
    src: url("/deskreview/fonts/AreaInktrap-Regular.woff2") format("woff2");
    font-weight: normal;
    font-style: normal;
    font-display: block;
  }

  @font-face {
    font-family: "AreaNormal";
    src: url("/deskreview/fonts/AreaNormal-Regular.woff2") format("woff2");
    font-weight: normal;
    font-style: normal;
    font-display: block;
  }

  @font-face {
    font-family: "AreaNormal";
    src: url("/deskreview/fonts/AreaNormal-Bold.woff2") format("woff2");
    font-weight: bold;
    font-style: normal;
    font-display: block;
  }

  /* Hide scrollbar */
  @layer utilities {
    /* Hide scrollbar for Chrome, Safari and Opera */
    .no-scrollbar::-webkit-scrollbar {
      display: none;
    }
    /* Hide scrollbar for IE, Edge and Firefox */
    .no-scrollbar {
      -ms-overflow-style: none; /* IE and Edge */
      scrollbar-width: none; /* Firefox */
    }
  }

  /* Scrollbar gutter */
  html {
    scrollbar-gutter: stable;
    overflow-y: scroll;
  }
</style>
