---
import { Image } from "astro:assets";
import asset_logo from "../assets/logo_clean.svg";

const { bgColor, cardTitle, cardText, buttonText, buttonColor, hoverColor } =
  Astro.props;
---

<!-- Card -->
<button
  class={`cursor-pointer mt-4 max-h-[350px] min-h-[350px] md:max-h-[400px]
    md:min-h-[400px] w-full max-w-[750px] rounded-lg ${bgColor} group relative`}
  data-slide-toggle
>
  <div
    class="pointer-events-none relative translate-y-[34%] text-center md:absolute
      md:left-0 md:top-0 md:m-8 md:translate-y-0 md:text-left"
  >
    <p class="font-AreaInktrap text-xl font-bold text-desk-white md:text-3xl">
      {cardTitle}
    </p>
    <p class="text-xl tracking-tight text-desk-white md:text-3xl">
      <Fragment set:html={cardText} />
    </p>
  </div>
  <div
    class={`absolute bottom-0 md:left-0 inset-x-0 md:text-left text-center m-8 p-3 text-xs
      text-desk-white border-[1px] border-desk-gray-300/50 rounded-lg md:w-fit
      ${hoverColor} ${buttonColor} ease-in duration-100 leading-none
      pointer-events-none`}
  >
    {buttonText}
  </div>
  <div
    class={`hidden md:block absolute bottom-0 md:right-0 md:text-left text-center m-8 p-3
      text-xs text-desk-white border-[1px] border-desk-gray-300/50 rounded-lg md:w-fit
      ${hoverColor} ${buttonColor} ease-in duration-100 leading-none
      pointer-events-none`}
  >
    &nbsp; âŒ˜ &nbsp;
  </div>
  <div
    class="pointer-events-none absolute inset-x-0 translate-y-[-181%] right-2 mx-auto w-fit
      md:absolute md:inset-x-auto md:right-0 md:top-0 md:m-8 md:translate-y-0"
  >
    <Image
      src={asset_logo}
      alt="about_card_element_graphic"
      width={80}
      height={80}
    />
  </div>
</button>
