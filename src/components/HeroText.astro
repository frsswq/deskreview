---
const { heroTitle, heroDescription, heroDescriptionMobile } = Astro.props;

import DividerReveal from "../components/DividerReveal.astro";
---
<div
  class="mb-8 mt-32 font-AreaNormal leading-none tracking-tighter
    text-desk-black antialiased md:mx-[20vw] md:mt-32"
>
  <p
    class="text-reveal mx-4 mb-2 text-4xl font-bold leading-none tracking-tight opacity-0
      md:text-5xl"
  >
    {heroTitle}
  </p>
  <DividerReveal />
  <p
    class="text-reveal mx-4 mt-4 text-3xl leading-[1.1] tracking-tight opacity-0
      md:text-2xl md:text-desk-black/75 md:hidden"
  >
    <Fragment set:html={heroDescriptionMobile} />
  </p>
  <p
    class="hidden md:block text-reveal mx-4 mt-4 text-2xl leading-[1.1] tracking-tight opacity-0 md:text-desk-black/75"
  >
    <Fragment set:html={heroDescription} />
  </p>
</div>
