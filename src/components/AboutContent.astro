---
import { manifesto } from "../data/manifesto.ts";
import { workedWith } from "../data/workedWith.ts";
import { services } from "../data/services.ts";
import { Icon } from "astro-icon/components";

import DividerReveal from "../components/DividerReveal.astro";
---

<div class="pb-10 md:mx-[20vw] md:pb-20">
  <div>
    <!-- manifesto -->
    <div
      class="text-balanced mx-4 space-y-4 pb-10 tracking-tight text-desk-black antialiased
        md:space-y-6 md:text-pretty md:pb-20"
    >
      <p class="text-reveal text-2xl leading-[1.333] opacity-0">
        <strong>{manifesto.paragraphs[0].slice(0, 19)}</strong>{
          manifesto.paragraphs[0].slice(19)
        }
      </p>
      <button
        class="about-modal text-reveal ease rounded-xl bg-desk-black px-4 pb-[6px] pt-[8px]
          text-xl text-desk-white opacity-0 transition-colors duration-150
          hover:bg-desk-gray-700"
        >read our manifesto &nbsp;â†’</button
      >
    </div>

    <!-- services -->
    <div
      class="py-10 leading-none tracking-tighter text-desk-black antialiased md:py-20"
    >
      <p class="text-reveal mx-4 mb-2 text-4xl font-bold opacity-0 md:text-5xl">
        Services
      </p>
      <DividerReveal />
      {
        services.map((item) => (
          <>
            <div>
              <p class="text-reveal mx-4 mt-6 text-sm uppercase text-desk-black/75 opacity-0 md:mt-8">
                {item.title}
              </p>
              <ul class="mx-4 capitalize">
                {item.types.map((type) => (
                  <>
                    <li
                      class="text-reveal pb-[9px] pt-[15px] text-xl leading-none tracking-tight opacity-0
                        md:text-[22px]"
                    >
                      {type}
                    </li>
                    <DividerReveal />
                  </>
                ))}
              </ul>
            </div>
          </>
        ))
      }
    </div>

    <!-- clients -->
    <div
      class="py-10 leading-none tracking-tighter text-desk-black antialiased md:py-20"
    >
      <p
        class="text-reveal mx-4 mb-2 text-4xl font-bold leading-none tracking-tight opacity-0
          md:text-5xl"
      >
        Clients
      </p>
      <DividerReveal />
      <p
        class="text-reveal text-md mx-4 mt-4 text-desk-black/75 opacity-0 md:mb-4 md:text-xl"
      >
        Selected:
      </p>
      <div
        class="grid grid-cols-1 items-end px-4 md:grid-cols-2 md:gap-x-8 md:gap-y-5"
      >
        {
          workedWith.map((item) => (
            <div>
              <div class="text-reveal mx-auto w-full px-10 pb-6 pt-12 opacity-0 md:px-8">
                <Icon
                  name={item.iconName}
                  class="h-auto w-full text-desk-gray-700"
                />
              </div>
              <p class="text-reveal text-md pb-[9px] pt-[15px] leading-none tracking-tight opacity-0">
                {item.name}
              </p>
              <DividerReveal />
            </div>
          ))
        }
      </div>
    </div>

    <!-- TODO@ get in touch -->
  </div>
</div>
