---
import Layout from "../layouts/Layout.astro";
import WorkCard from "../components/WorkCard.astro";
import HeroText from "../components/HeroText.astro";

const heroTitle = "Our Work";
const heroDescription =
  "Market-ready branding strategies, <br/> competition-winning digital campaigns.";
const heroDescriptionMobile =
  "Market-ready <br/> branding strategies, <br/> competition-winning <br/> digital campaigns.";

const pageTitle = "Work";
const withFooter = true;
---

<Layout pageTitle={pageTitle} withFooter={withFooter}>
  <HeroText
    heroTitle={heroTitle}
    heroDescription={heroDescription}
    heroDescriptionMobile={heroDescriptionMobile}
  />
  <WorkCard />
</Layout>
