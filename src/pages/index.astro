---
import Layout from "../layouts/Layout.astro";
import HeroText from "../components/HeroText.astro";
import AboutContent from "../components/AboutContent.astro";
import AboutDrawer from "../components/AboutDrawer.astro";

const heroTitle = "About Us";
const heroDescription = "A Branding & Campaign Strategy Studio";
const heroDescriptionMobile = "Brand & Marketing <br /> Strategy Studies";

const pageTitle = "About";
const withFooter = true;
---

<Layout pageTitle={pageTitle} withFooter={withFooter}>
  <HeroText
    heroTitle={heroTitle}
    heroDescription={heroDescription}
    heroDescriptionMobile={heroDescriptionMobile}
  />
  <AboutContent />
  <AboutDrawer />
</Layout>
